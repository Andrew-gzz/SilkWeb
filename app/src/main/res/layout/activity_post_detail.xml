<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    tools:context=".presentation.ui.PostDetailActivity">

    <!-- CONTENIDO SCROLLEABLE -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp">

                <ImageButton
                    android:id="@+id/id_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_back"
                    app:tint="@color/primaryLight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PublicaciÃ³n"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <!-- POST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_recyclerFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- SEPARADOR -->
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/limit_line" />

            <!-- TITULO COMENTARIOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:text="Comentarios"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- LISTA DE COMENTARIOS -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_recyclerComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BARRA DE COMENTAR (FIJA ABAJO) -->
    <LinearLayout
        android:id="@+id/commentBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/primaryDark"
        android:elevation="10dp">

        <EditText
            android:id="@+id/id_etComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Escribe un comentario..."
            android:background="@drawable/edittext_rounded"
            android:padding="10dp"
            android:textColor="@color/primaryDark"
            android:textColorHint="@color/grey"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/id_btnSendComment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_send"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
