<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MyPostsActivity"
    android:background="@color/primaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingHorizontal="30dp">
            <ImageButton
                android:id="@+id/id_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Regresar"
                android:src="@drawable/ic_back"
                app:tint="@color/primaryLight" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="Edita tus publicaciones"
                android:textColor="@color/primaryLight"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/id_loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/id_ivLoading"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_loading"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/id_ivOffline"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_offline"
                android:visibility="gone" />
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_recyclerFeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            tools:listitem="@layout/item_post">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</FrameLayout>