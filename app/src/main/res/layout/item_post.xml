<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="18dp"
        android:paddingTop="15dp"
        android:background="@color/primaryDark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_ivProfileImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|center"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:contentDescription="@string/PhotoDescription"
                android:scaleType="centerCrop"
                android:src="@drawable/silkweb">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp">
                <TextView
                    android:id="@+id/id_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/app_name"
                    android:textSize="16sp">
                </TextView>
                <TextView
                    android:id="@+id/id_etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/etTitle"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/primaryLight"
                    android:textSize="20sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/id_etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/primaryLight"
                    android:textSize="16sp">
                </TextView>
                <HorizontalScrollView
                    android:id="@+id/id_hsImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/id_llImages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical" />
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/id_btnFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="Me encanta"
                        android:src="@drawable/ic_favorite"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/id_tvFavoritesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:text="1.5k"
                        android:textColor="@color/primaryLight"
                        android:textSize="14sp" />
                    <ImageButton
                        android:id="@+id/id_btnComments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="Ver comentarios"
                        android:src="@drawable/ic_comment"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/id_tvCommentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:text="1.5k"
                        android:textColor="@color/primaryLight"
                        android:textSize="14sp" />
                    <ImageButton
                        android:id="@+id/id_btnBookMarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="Marcar como favorito"
                        android:src="@drawable/ic_bookmark"
                        android:layout_marginStart="150dp"
                        android:padding="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
